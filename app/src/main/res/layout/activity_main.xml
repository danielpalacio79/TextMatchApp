<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/tittle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.result}"
            android:visibility="@{viewModel.labelVisibility}"/>
            <!--android:hint="Prueba de texto"-->


        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Texto 1"
            android:text="@={viewModel.text1}" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Texto 2"
            android:text="@={viewModel.text2}" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp"/>

        <Button
            android:id="@+id/compareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.compareText()}"
            android:text="Comparar"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/comparingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.result}"
            android:visibility="@{viewModel.labelVisibility}" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>